{% extends 'base.html.twig' %}

{% block title %}Modification du Profil{% endblock %}

{% block body %}

  {% for message in app.flashes('success') %}
    <div class="alert alert-success m-3">
      {{ message }}
    </div>
  {% endfor %}
  {% for message in app.flashes('error') %}
    <div class="alert alert-danger m-3">
      {{ message }}
    </div>
  {% endfor %}

  <div class="m-5">
    {{ form(profilForm) }}
  </div>


  {# <a href="{{path('delete_profil',{id:user.id})}}" class="btn btn-outline-danger d-block mx-5" onclick= "return confirm('Vous êtes sur le point de supprimer votre compte. Cliquer OK pour confirmer.')" >Supprimer mon compte</a> #}

  <form
    action ="{{path('delete_profil')}}"
    method="post"
    onsubmit="return confirm('Vous êtes sur le point de supprimer votre compte. Cliquer OK pour confirmer.')"
  >
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_user') }}">
    <button type="submit" class="btn btn-danger">Supprimer mon compte</button>
  </form>
    
{% endblock %}